{
  "compilerOptions": {
    "lib": ["es2018"],
    "target": "es2018",
    "module": "CommonJS",
    "removeComments": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "baseUrl": "./",
    "declaration": true
  },
  "include": ["./src/**/*.ts", "./.eslintrc.js"],
  "exclude": ["node_modules/**/*"]
}
